// Custom styles for just-the-docs theme
body {
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
    Roboto, "Helvetica Neue", Arial, sans-serif;
}

.site-title {
  font-weight: bold;
}

.navigation-list-item {
  padding: 0.25rem 0;
}

.main-content h1,
.main-content h2,
.main-content h3,
.main-content h4,
.main-content h5,
.main-content h6 {
  margin-top: 1.5em;
  margin-bottom: 0.5em;
}

// Improve code block readability
.highlight {
  margin-bottom: 1rem;
}

pre.highlight {
  padding: 0.75rem;
  border-radius: 4px;
} 